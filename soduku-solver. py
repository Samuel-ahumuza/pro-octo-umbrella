# A 9x9 Sudoku puzzle to solve. 0 represents an empty cell.
board = [
    [5, 3, 0, 0, 7, 0, 0, 0, 0],
    [6, 0, 0, 1, 9, 5, 0, 0, 0],
    [0, 9, 8, 0, 0, 0, 0, 6, 0],
    [8, 0, 0, 0, 6, 0, 0, 0, 3],
    [4, 0, 0, 8, 0, 3, 0, 0, 1],
    [7, 0, 0, 0, 2, 0, 0, 0, 6],
    [0, 6, 0, 0, 0, 0, 2, 8, 0],
    [0, 0, 0, 4, 1, 9, 0, 0, 5],
    [0, 0, 0, 0, 8, 0, 0, 7, 9]
]

def solve_sudoku(grid):
    """
    Solves the sudoku puzzle using a recursive backtracking algorithm.
    """
    empty_cell = find_empty(grid)
    if not empty_cell:
        # No empty cells left, puzzle is solved!
        return True
    
    row, col = empty_cell

    # Try numbers from 1 to 9
    for num in range(1, 10):
        if is_safe(grid, num, row, col):
            # If the number is "safe" (valid), place it.
            grid[row][col] = num

            # Recursively try to solve the rest of the puzzle
            if solve_sudoku(grid):
                return True # If it leads to a solution, we're done.

            # --- This is the "backtracking" part ---
            # If it didn't lead to a solution, undo the move
            # and try the next number.
            grid[row][col] = 0

    # If we tried all numbers 1-9 and none worked, this path is wrong.
    return False

def is_safe(grid, num, row, col):
    """
    Checks if it's "safe" to place 'num' at grid[row][col].
    """
    # Check 1: Check the row
    if any(grid[row][c] == num for c in range(9)):
        return False
        
